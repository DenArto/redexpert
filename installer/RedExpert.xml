<?xml version="1.0" encoding="utf-8" ?>
<!--xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="./InstallBuilder.rng"-->
<project >
    <shortName>RedExpert</shortName>
    <fullName>Red Expert</fullName>
    <version>${VERSION}</version>
    <licenseFile>${redexpert_dir}/LICENSE.txt</licenseFile>
    <logoImage>logos/red_expert.png</logoImage>
    <allowLanguageSelection>1</allowLanguageSelection>
    <customLanguageFileList>
        <language>
            <code>en</code>
            <encoding>utf-8</encoding>
            <file>localization/install_props_en.lng</file>
        </language>
        <language>
            <code>ru</code>
            <encoding>cp1251</encoding>
            <file>localization/install_props_ru.lng</file>
        </language>
    </customLanguageFileList>
    <componentList>
        <component>
            <name>default</name>
            <description>Default Component</description>
            <canBeEdited>1</canBeEdited>
            <selected>1</selected>
            <show>1</show>
            <folderList>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfiles</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionDirectory allowWildcards="1">
                            <origin>${redexpert_dir}/*</origin>
                        </distributionDirectory>
                    </distributionFileList>
                    <shortcutList>
                        <shortcut>
                            <comment>Uninstall</comment>
                            <exec>${installdir}/${uninstallerName}</exec>
                            <icon></icon>
                            <name>Uninstall ${product_shortname}</name>
                            <path>${installdir}</path>
                            <platforms>all</platforms>
                            <runAsAdmin>0</runAsAdmin>
                            <runInTerminal>0</runInTerminal>
                            <windowsExec>${installdir}/${uninstallerName}.exe</windowsExec>
                            <windowsExecArgs></windowsExecArgs>
                            <windowsIcon></windowsIcon>
                            <windowsPath>${installdir}</windowsPath>
                        </shortcut>
                    </shortcutList>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileslinux</name>
                    <platforms>linux</platforms>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileswindows</name>
                    <platforms>windows</platforms>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfilesosx</name>
                    <platforms>osx</platforms>
                </folder>
            </folderList>
            <desktopShortcutList>
                <shortcut>
                    <comment>Launch ${project.shortName}</comment>
                    <name>${project.shortName}</name>
                    <platforms>all</platforms>
                    <exec>${installdir}/bin/${execute_file}</exec>
                    <path>${installdir}</path>
                    <icon>${installdir}/red_expert.png</icon>
                    <windowsExec>${installdir}/bin/${execute_file}.exe</windowsExec>
                    <windowsPath>${installdir}/bin/</windowsPath>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon>${installdir}/bin/${execute_file}.exe</windowsIcon>
                    <runAsAdmin>0</runAsAdmin>
                </shortcut>
            </desktopShortcutList>
            <startMenuShortcutList>
                <startMenuShortcut>
                    <comment>Uninstall ${product_shortname}</comment>
                    <name>Uninstall ${product_shortname}</name>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/${uninstallerName}.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath>${installdir}/</windowsPath>
                </startMenuShortcut>
                <startMenuShortcut>
                    <comment>Launch ${project.shortName}</comment>
                    <name>${project.shortName}</name>
                    <windowsExec>${installdir}/bin/${execute_file}.exe</windowsExec>
                    <windowsPath>${installdir}/bin/</windowsPath>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon>${installdir}/bin/${execute_file}.exe</windowsIcon>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <noPinToStart>0</noPinToStart>
                </startMenuShortcut>
            </startMenuShortcutList>
        </component>
    </componentList>
    <preBuildActionList>
        <setInstallerVariable>
            <name>execute_file</name>
            <value>${execution_file}</value>
            <persist>1</persist>
        </setInstallerVariable>
        <setInstallerVariable>
            <name>bitness_app</name>
            <value>64</value>
            <persist>1</persist>
            <ruleList>
                <compareText>
                    <logic>contains</logic>
                    <text>${execution_file}</text>
                    <value>64</value>
                </compareText>
            </ruleList>
        </setInstallerVariable>
        <setInstallerVariable>
            <name>bitness_app</name>
            <value>32</value>
            <persist>1</persist>
            <ruleList>
                <compareText>
                    <logic>does_not_contain</logic>
                    <text>${execution_file}</text>
                    <value>64</value>
                </compareText>
            </ruleList>
        </setInstallerVariable>
        <iniFileGet>
            <file>${redexpert_dir}/config/redexpert_config.ini</file>
            <section>Installer_settings</section>
            <key>eq.user.home.dir</key>
            <variable>settings_dir</variable>
        </iniFileGet>
        <iniFileGet>
            <file>${redexpert_dir}/config/redexpert_config.ini</file>
            <section>Installer_settings</section>
            <key>eq.min_version_java</key>
            <variable>min_java_version</variable>
        </iniFileGet>
    </preBuildActionList>
    <postInstallationActionList>
        <createShortcuts>
            <destination>${user_home_directory}/.local/share/applications</destination>
            <shortcutList>
                <shortcut>
                    <comment>Launches ${project.fullName}</comment>
                    <name>${project.shortName}</name>
                    <platforms>linux</platforms>
                    <exec>${installdir}/bin/${execute_file}</exec>
                    <path>${installdir}</path>
                    <icon>${installdir}/red_expert.png</icon>
                    <runAsAdmin>0</runAsAdmin>
                </shortcut>
            </shortcutList>
        </createShortcuts>
        <iniFileSet>
            <file>${user_home_directory}/.local/share/applications/${project.shortName}.desktop</file>
            <section>Desktop Entry</section>
            <key>Categories</key>
            <value>Development;IDE;</value>
            <ruleList>
                <fileExists>
                        <path>${user_home_directory}/.local/share/applications/${project.shortName}.desktop</path>
                </fileExists>
            </ruleList>
        </iniFileSet>
        <iniFileSet>
            <file>${installdir}${platform_path_separator}config${platform_path_separator}redexpert_config.ini</file>
            <section>Installer_settings</section>
            <key>eq.user.home.dir</key>
            <value>${settings_dir}</value>
        </iniFileSet>
        <createDirectory>
            <path>${settings_dir}</path>
        </createDirectory>
        <iniFileGet>
            <file>${installdir}/config/redexpert_config.ini</file>
            <section>Installer_settings</section>
            <key>eq.java_paths.filename</key>
            <variable>java_paths_filename</variable>
        </iniFileGet>
        <writeFile>
            <path>${settings_dir}${platform_path_separator}${java_paths_filename}</path>
            <text>java_home=${java_home}</text>
        </writeFile>
    </postInstallationActionList>

    <preUninstallationActionList>
        <deleteFile path="${installdir}/bin"/>
        <deleteFile path="${installdir}/lib"/>
        <deleteFile path="${installdir}/RedExpertInstallation.log"/>
    </preUninstallationActionList>
    <allowedLanguages>en ru</allowedLanguages>
    <enableRollback>1</enableRollback>
    <enableTimestamp>1</enableTimestamp>
    <saveRelativePaths>1</saveRelativePaths>
    <outputDirectory>${output_dir}</outputDirectory>
    <installerFilename>${installer_name}</installerFilename>
    <disableSplashScreen>1</disableSplashScreen>
    <vendor>Red Soft Corporation</vendor>
    <windows64bitMode>1</windows64bitMode>
    <installationLogFile>${installdir}/RedExpertInstallation.log</installationLogFile>
    <parameterList>
        <directoryParameter>
            <name>settings_dir</name>
            <description>Installer.Parameter.settings_dir.description</description>
            <explanation>Installer.Parameter.settings_dir.explanation</explanation>
            <value></value>
            <default>${settings_dir}</default>
            <allowEmptyValue>0</allowEmptyValue>
            <ask>yes</ask>
            <cliOptionName>prefix</cliOptionName>
            <mustBeWritable>no</mustBeWritable>
            <mustExist>0</mustExist>
            <width>40</width>
            <preShowPageActionList>
                <setInstallerVariableFromRegEx>
                    <name>settings_dir</name>
                    <pattern>\$HOME</pattern>
                    <substitution>${user_home_directory}</substitution>
                    <text>${settings_dir}</text>
                </setInstallerVariableFromRegEx>
            </preShowPageActionList>
        </directoryParameter>
        <directoryParameter>
            <name>java_home</name>
            <description>Installer.Parameter.java_home.description</description>
            <explanation>Installer.Parameter.java_home.explanation</explanation>
            <value></value>
            <default>${java_path}</default>
            <allowEmptyValue>0</allowEmptyValue>
            <ask>yes</ask>
            <cliOptionName>prefix</cliOptionName>
            <mustBeWritable>no</mustBeWritable>
            <mustExist>1</mustExist>
            <width>40</width>
            <preShowPageActionList>
                <autodetectJava>
                <abortOnError>0</abortOnError>
                <showMessageOnError>1</showMessageOnError>
                <promptUser>0</promptUser>
                <validVersionList>
                    <validVersion>
                        <vendor></vendor>
                        <minVersion>${min_java_version}</minVersion>
                        <maxVersion></maxVersion>
                        <bitness>${bitness_app}</bitness>
                    </validVersion>
                </validVersionList>
            </autodetectJava>
                <if>
                    <conditionRuleList>
                        <isTrue>
                            <value>${java_autodetected}</value>
                        </isTrue>
                    </conditionRuleList>
                    <actionList>
                        <runProgram>
                            <program>${java_executable}</program>
                            <programArguments>-XshowSettings:properties -version</programArguments>
                            <abortOnError>0</abortOnError>
                            <showMessageOnError>0</showMessageOnError>
                        </runProgram>
                        <setInstallerVariableFromRegEx>
                             <name>java_path</name>
                             <text>${program_stderr}</text>
                             <pattern>^.*java\.home = ([^\n]*)\n.*$</pattern>
                             <substitution>\1</substitution>
                        </setInstallerVariableFromRegEx>
                    </actionList>
                    <elseActionList>
                        <setInstallerVariable>
                            <name>java_path</name>
                            <value></value>
                        </setInstallerVariable>
                    </elseActionList>
                </if>
            </preShowPageActionList>
            <validationActionList>
                <if>
                    <conditionRuleList>
                        <platformTest>
                            <type>windows</type>
                        </platformTest>
                    </conditionRuleList>
                    <actionList>
                        <setInstallerVariable>
                            <name>java_exe</name>
                            <value>java.exe</value>
                        </setInstallerVariable>
                    </actionList>
                    <elseActionList>
                        <setInstallerVariable>
                            <name>java_exe</name>
                            <value>java</value>
                        </setInstallerVariable>
                    </elseActionList>
                </if>
                <setInstallerVariable>
                    <name>java_executable</name>
                    <value>${java_home}${platform_path_separator}bin${platform_path_separator}${java_exe}</value>
                </setInstallerVariable>
                <runProgram>
                    <program>${java_executable}</program>
                    <programArguments>-XshowSettings:properties -version</programArguments>
                    <abortOnError>0</abortOnError>
                    <showMessageOnError>0</showMessageOnError>
                </runProgram>
                <setInstallerVariable>
                    <name>java_props</name>
                    <value>${program_stderr}</value>
                </setInstallerVariable>
                <setInstallerVariable>
                    <name>java_executable</name>
                    <value>${java_home}{platform_path_separator}${java_exe}</value>
                    <ruleList>
                        <compareText>
                            <text>${java_props}</text>
                            <logic>does_not_contain</logic>
                            <value>Property settings</value>
                        </compareText>
                    </ruleList>
                </setInstallerVariable>
                <runProgram>
                    <program>${java_executable}</program>
                    <programArguments>-XshowSettings:properties -version</programArguments>
                    <abortOnError>0</abortOnError>
                    <showMessageOnError>0</showMessageOnError>
                </runProgram>
                <setInstallerVariable>
                    <name>java_props</name>
                    <value>${program_stderr}</value>
                </setInstallerVariable>
                <throwError>
                    <text>${msg(Installer.Parameter.java_home.error.not_found)}</text>
                    <ruleList>
                       <compareText>
                           <text>${java_props}</text>
                           <logic>does_not_contain</logic>
                           <value>Property settings</value>
                       </compareText>
                    </ruleList>
                </throwError>
                <setInstallerVariableFromRegEx>
                    <name>java_home</name>
                    <text>${java_props}</text>
                    <pattern>^.*java\.home = ([^\n]*)\n.*$</pattern>
                    <substitution>\1</substitution>
                </setInstallerVariableFromRegEx>
                <setInstallerVariableFromRegEx>
                    <name>java_version</name>
                    <text>${java_props}</text>
                    <pattern>^.*java\.version = ([^\n]*)\n.*$</pattern>
                    <substitution>\1</substitution>
                </setInstallerVariableFromRegEx>
                <throwError>
                    <text>${msg(Installer.Parameter.java_home.error.min_version)}</text>
                    <ruleList>
                        <compareVersions>
                            <logic>less</logic>
                            <version1>${java_version}</version1>
                            <version2>${min_java_version}</version2>
                        </compareVersions>
                    </ruleList>
                </throwError>
                <setInstallerVariableFromRegEx>
                    <name>java_arch</name>
                    <text>${java_props}</text>
                    <pattern>^.*os\.arch = ([^\n]*)\n.*$</pattern>
                    <substitution>\1</substitution>
                </setInstallerVariableFromRegEx>
                <setInstallerVariable>
                    <name>check_java_version</name>
                    <value>x86</value>
                    <ruleList>
                        <compareText>
                            <text>${bitness_app}</text>
                            <value>32</value>
                        </compareText>
                    </ruleList>
                </setInstallerVariable>
                <setInstallerVariable>
                    <name>check_java_version</name>
                    <value>amd64</value>
                    <ruleList>
                        <compareText>
                            <text>${bitness_app}</text>
                            <value>64</value>
                        </compareText>
                    </ruleList>
                </setInstallerVariable>
                <throwError>
                    <text>${msg(Installer.Parameter.java_home.error.bitness)}</text>
                    <ruleList>
                        <compareText>
                            <text>${java_arch}</text>
                            <value>${check_java_version}</value>
                            <negate>1</negate>
                        </compareText>
                    </ruleList>
                </throwError>
            </validationActionList>
        </directoryParameter>
        <directoryParameter>
            <name>installdir</name>
            <description>Installer.Parameter.installdir.description</description>
            <explanation>Installer.Parameter.installdir.explanation</explanation>
            <value></value>
            <default>${platform_install_prefix}${platform_path_separator}${project.shortName}</default>
            <allowEmptyValue>0</allowEmptyValue>
            <ask>yes</ask>
            <cliOptionName>prefix</cliOptionName>
            <mustBeWritable>yes</mustBeWritable>
            <mustExist>0</mustExist>
            <width>40</width>
        </directoryParameter>
        <stringParameter>
            <name>execute_file</name>
            <allowEmptyValue>0</allowEmptyValue>
            <ask>no</ask>
            <width>40</width>
        </stringParameter>
        <stringParameter>
            <name>bitness_app</name>
            <allowEmptyValue>0</allowEmptyValue>
            <ask>no</ask>
            <width>2</width>
        </stringParameter>
        <stringParameter>
            <name>min_java_version</name>
            <allowEmptyValue>0</allowEmptyValue>
            <ask>no</ask>
        </stringParameter>
    </parameterList>
</project>

