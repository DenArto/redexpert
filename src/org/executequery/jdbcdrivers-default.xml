<?xml version="1.0" encoding="UTF-8"?>

<!--
    =======================================================================
    File:         jdbcdrivers-default.xml
    Author:       Takis Diakoumis
    Description:  Default empty JDBC driver definitions file (contains
                  ODBC definition only)
    =======================================================================
-->

<jdbcdrivers>
    <databasedrivers>
        <id>1111111</id>
        <name>Jaybird 3 Driver</name>
        <description>Jaybird 3 Driver</description>
        <type>16</type>
        <path>./lib/jaybird-full-jdk18-3.0.4.12.jar</path>
        <classname>org.firebirdsql.jdbc.FBDriver</classname>
        <url>jdbc:firebirdsql://[host]:[port]/[source]</url>
    </databasedrivers>
    <databasedrivers>
        <id>9999999999999</id>
        <name>ODBC Driver</name>
        <description>Sun ODBC Driver</description>
        <type>8</type>
        <path/>
        <classname>sun.jdbc.odbc.JdbcOdbcDriver</classname>
        <url>jdbc:odbc:[source]</url>
    </databasedrivers>
    <databasedrivers>
        <id>1111112</id>
        <name>JDBC Logger Driver</name>
        <description>Measuring performance of SQL statements executed through JDBC</description>
        <type>-1</type>
        <path>./lib/jdbc-perf-logger-driver-0.8.1-SNAPSHOT.jar</path>
        <classname>ch.sla.jdbcperflogger.driver.WrappingDriver</classname>
        <url>jdbcperflogger: jdbc connection string</url>
    </databasedrivers>
</jdbcdrivers>
